<%- include('partials/header') %>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/admin.css"> 
    
<div class="container">
<div class="row">
    <div class="col-10"><h1>Admin</h1></div>
    <div class="col-2 logout"><a href="/logout"><button class="btn btn-danger " >â˜  Logout</button></a></div>
        
    </div>
    
        <a href="/admin/add-user"><button class="btn btn-success btn-lg"><strong>+</strong> Add new user</button></a>
    <div class="row">
        
            <h2 class="col-lg-12">Requests</h2>
            <div class="col-lg-12  col-sm-12">
              <div class="table-responsive table-body">
                     <table class="table table-striped table-bordered table-hover ">
                        <thead >
                        <th scope="col">Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">address</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Type</th>
                        <th scope="col"></th>
                        <!-- <th scope="col"></th> -->
                        
                        </thead>
                        <tbody>
                        <% for(var i=0;i<data.length;i++){%>
                         <tr>
                            <td><%=data[i].name%></td>
                            <td><%=data[i].phone%></td>
                            <td><%=data[i].email%></td>
                            <td><%=data[i].address%></td>
                            <td><%=data[i].discription%></td>
                            <td><%=data[i].type%></td>
                            <!-- <td><a href="/admin/req-info/<%=data[i]._id%>">Open</a></td> -->
                            <td><a href="/admin/remove-req/<%=data[i]._id%>">remove</a></td>
                         </tr>
                         <%}%>
                 
                     </tbody> 
                 </table>
              </div>
            </div>
            <a href="/admin/all-req"><button class="btn btn-sm btn-outline-dark ">All previous requests</button></a>
        </div>    

       
       
        <div class="row">
            
            <h2 class="col-lg-12">Problems</h2>
           <div class="col-lg-12  col-sm-12">
             <div class="table-responsive table-body ">
                    <table class="table table-striped table-bordered table-hover table-dark">
                       <thead >
                       <th scope="col">Problem</th>
                       <th scope="col">discription</th>
                       <th scope="col">User</th>
                       <th scope="col">Project</th>
                       <th scope="col"></th>
                       
                       </thead>
                       <tbody class="problem">
                        <% for(var i=0;i<problems.length;i++){%>
                        <tr>
                        <td><%=problems[i].problem%></td>
                        <td><%=problems[i].discription%></td>
                        <td><%=problems[i].user_id.username%></td>
                        <td><%=problems[i].user_id.projectName%></td>
                        <td><a href="/admin/remove-problem/<%=problems[i]._id%>">Resolved</a></td>
                        </tr>
                        <%}%>
                    </tbody> 
                </table>
             </div>
           </div>
    </div>

    <div class="row">
            
        <h2 class="col-lg-12">Current Users</h2>
       <div class="col-lg-12  col-sm-12">
         <div class="table-responsive table-body">
                <table class="table table-striped table-bordered table-hover ">
                   <thead >
                   <th scope="col">Username</th>
                   <th scope="col">Project Name</th>
                   <th scope="col">Status</th>
                   <th scope="col">Open</th>
                   
                   </thead>
                   <tbody>
                    <%for(var i=0;i<users.length;i++){%>
                    <tr>
                        <td><%=users[i].username%></td>   
                        <td><%=users[i].projectName%></td>  
                        <td><%=users[i].status%></td>  
                        <td><a href="/admin/user/<%=users[i]._id%>">Open</a></td>
                    </tr>
                    <%}%>
                </tbody> 
            </table>
         </div>
       </div>
       <a href="/admin/all-users"> <button class="btn btn-success">All Users</button></a>
</div>
      
     
    
        
</div>
<%- include('partials/footer') %>